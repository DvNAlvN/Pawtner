<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5E6"
    android:padding="16dp">

    <!-- 🔼 Navbar Top -->
    <TextView
        android:id="@+id/navbarTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navbar Top"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="12dp" />

    <!-- ⬅️ Back & ⬆️ Logout Icon -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/btnLogout"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_logout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp" />

    <!-- 🧑 Foto Profil -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/navbarTop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_profile_placeholder" />

    <!-- 📋 Form -->
    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="16dp"
        android:background="#262C57"
        android:padding="16dp"
        android:layout_marginBottom="60dp">

        <EditText android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:text="Jason Amanda Hezkiel"
            android:enabled="false"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:backgroundTint="#fff"/>

        <Spinner android:id="@+id/spinnerGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:entries="@array/gender_options"/>

        <EditText android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:text="08276166889"
            android:enabled="false"
            android:backgroundTint="#fff"
            android:textColor="#fff"/>

        <EditText android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:text="jasonamd@gmail.com"
            android:enabled="false"
            android:backgroundTint="#fff"
            android:textColor="#fff"/>

        <EditText android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:text="Palm Sprint B7D, Surabaya, Indonesia"
            android:enabled="false"
            android:backgroundTint="#fff"
            android:textColor="#fff"/>

        <EditText android:id="@+id/etNIK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="National ID (NIK)"
            android:text="57821601020009"
            android:enabled="false"
            android:backgroundTint="#fff"
            android:textColor="#fff"/>
    </LinearLayout>

    <!-- 🔘 Edit/Save Button -->
    <Button
        android:id="@+id/btnEditSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Edit Profile"
        android:backgroundTint="#5D9BFF"
        android:textColor="#fff"
        android:layout_marginBottom="12dp"/>

    <!-- ❗ Pop-up Logout -->
    <LinearLayout
        android:id="@+id/logoutPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#4169E1"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apakah kamu yakin ingin keluar dari sesi ini?"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnCancelLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/btnConfirmLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iya"
                android:backgroundTint="#FF0000"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
