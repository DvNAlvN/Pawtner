<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5E6"
    android:id="@+id/register"
    tools:context=".ui.RegisterActivity">


    <!-- 🔷 Background atas bergelombang -->
    <ImageView
        android:id="@+id/topBackground"
        android:layout_width="414dp"
        android:layout_height="327dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_register_top"
        app:layout_constraintDimensionRatio="411:430"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 🔳 Card putih untuk form register -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <!-- 🖋 Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp" />

            <!-- 📥 Input Fields -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:backgroundTint="#CCCCCC"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:backgroundTint="#CCCCCC"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:backgroundTint="#CCCCCC"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:backgroundTint="#CCCCCC"/>

            <!-- ⚧ Gender -->

            <TextView
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="10dp"
                android:hint="Gender"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:hint="Male"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    android:hint="Female" />
            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:layout_marginTop="0dp"
                android:padding="10dp"
                android:backgroundTint="#CCCCCC"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="National ID (NIK)"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:backgroundTint="#CCCCCC"/>

            <!-- 🔘 Tombol Sign Up -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:backgroundTint="#5D9BFF"
                android:layout_marginTop="10dp"
                app:cornerRadius="5dp"
                android:layout_marginBottom="8dp" />

            <!-- 📜 Terms and Condition -->
            <TextView
                android:id="@+id/termsText"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/terms_text"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 🌐 Google & Facebook Buttons -->
    <LinearLayout
        android:id="@+id/socialLogin"
        android:layout_width="348dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formCard">

        <!--        <com.google.android.material.button.MaterialButton-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="45dp"-->
        <!--            android:layout_marginEnd="12dp"-->
        <!--            android:backgroundTint="#FFFFFF"-->
        <!--            app:icon="@drawable/ic_google"-->
        <!--            android:text="Google"-->
        <!--            app:iconTintMode="multiply"-->
        <!--            android:textColor="#000000"-->
        <!--            app:iconSize="40dp" />-->

        <!--        <Button-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:backgroundTint="#FFFFFF"-->
        <!--            android:drawableLeft="@drawable/ic_facebook"-->
        <!--            android:text="Facebook"-->
        <!--            android:textColor="#000000" />-->
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="GOOGLE"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:icon="@drawable/ic_google"
            app:iconSize="30dp"
            app:cornerRadius="20dp"
            app:iconTintMode="multiply" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="FACEBOOK"
            app:cornerRadius="20dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:icon="@drawable/ic_facebook"
            app:iconSize="24dp"
            app:iconTintMode="multiply" />

    </LinearLayout>

    <!-- 🔁 Sudah punya akun -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign in"
        android:text1="Sign in"
        android:textColor="#000000"
        android:textColor1="##5D9BFF"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/socialLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
